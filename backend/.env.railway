# ──────────────────────────────────────────────────────
# Variables d'environnement à configurer sur Railway
# Dashboard Railway → ton projet → Variables
# ──────────────────────────────────────────────────────

# App
APP_ENV=production
DEBUG=False

# MongoDB Atlas
# Format : mongodb+srv://<user>:<password>@<cluster>.mongodb.net/<dbname>?retryWrites=true&w=majority
MONGO_URL=mongodb+srv://USER:PASSWORD@cluster.mongodb.net/DB_NAME?retryWrites=true&w=majority
DB_NAME=Pickupoint

# JWT — générer avec : python -c "import secrets; print(secrets.token_hex(32))"
JWT_SECRET=REPLACE_WITH_STRONG_SECRET_KEY
ACCESS_TOKEN_EXPIRE_MINUTES=120
REFRESH_TOKEN_EXPIRE_DAYS=30

# OTP
OTP_EXPIRE_MINUTES=10
OTP_LENGTH=6

# Twilio (SMS/WhatsApp OTP)
TWILIO_ACCOUNT_SID=
TWILIO_AUTH_TOKEN=
TWILIO_SMS_NUMBER=
TWILIO_WHATSAPP_NUMBER=whatsapp:+14155238886

# Paiement — Flutterwave
FLUTTERWAVE_SECRET_KEY=
FLUTTERWAVE_PUBLIC_KEY=
FLUTTERWAVE_WEBHOOK_SECRET=

# Pricing (XOF)
BASE_PRICE_RELAY=500.0
BASE_PRICE_HOME=1000.0
PRICE_PER_KM=50.0
MIN_PRICE=500.0
