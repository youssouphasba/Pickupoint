# App
APP_ENV=development
DEBUG=true

# MongoDB
MONGO_URL=mongodb://localhost:27017
DB_NAME=pickupoint

# JWT (peut partager le même secret que projet_stock pour SSO futur)
JWT_SECRET=changeme_minimum_32_chars_here_please
ACCESS_TOKEN_EXPIRE_MINUTES=120
REFRESH_TOKEN_EXPIRE_DAYS=30

# OTP
OTP_EXPIRE_MINUTES=10
OTP_LENGTH=6

# Twilio (WhatsApp OTP + SMS fallback)
TWILIO_ACCOUNT_SID=
TWILIO_AUTH_TOKEN=
TWILIO_WHATSAPP_NUMBER=whatsapp:+14155238886
TWILIO_SMS_NUMBER=

# Paiement — Flutterwave (Mobile Money XOF : Orange Money, Wave, MTN, etc.)
# Récupérer les clés sur https://dashboard.flutterwave.com/settings/apis
FLUTTERWAVE_SECRET_KEY=
FLUTTERWAVE_PUBLIC_KEY=
FLUTTERWAVE_WEBHOOK_SECRET=   # verif-hash défini dans le dashboard Flutterwave

# Pricing defaults (XOF)
BASE_PRICE_RELAY=500
BASE_PRICE_HOME=1000
PRICE_PER_KM=50
MIN_PRICE=500

# Commission splits (%)
COMMISSION_DRIVER=20
COMMISSION_ORIGIN_RELAY=10
COMMISSION_DEST_RELAY=15
